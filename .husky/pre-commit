#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run lint before commit if npm is available, otherwise skip so the commit isn't blocked on CI/embedded Git tools
if command -v npm >/dev/null 2>&1; then
  npm run lint --silent
else
  echo "husky (pre-commit): npm not found in PATH, skipping lint step."
fi
