# Email Configuration for Medh Platform
# Copy these settings to your .env file

# AWS SES SMTP Configuration
EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=YOUR_SES_USERNAME_HERE
EMAIL_PASS=YOUR_SES_PASSWORD_HERE
EMAIL_FROM="Medh No-Reply <noreply@medh.co>"

# Redis Configuration for Email Queue
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# Email Queue Configuration
EMAIL_QUEUE_CONCURRENCY=5
EMAIL_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAY=60000
EMAIL_JOB_TIMEOUT=30000
EMAIL_BATCH_SIZE=50
EMAIL_BATCH_DELAY=1000
EMAIL_KEEP_FAILED_JOBS=false
EMAIL_DEBUG=false

# Email Template Settings
OTP_EXPIRY_MINUTES=10
PASSWORD_RESET_EXPIRY_HOURS=24

# To get AWS SES SMTP credentials:
# 1. Go to AWS Console -> Simple Email Service
# 2. Click on "SMTP Settings" in the left navigation
# 3. Click "Create SMTP credentials"
# 4. Use the credentials generated there
